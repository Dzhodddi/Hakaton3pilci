services:
  prompt-service:
    build:
      context: .
      dockerfile: ./prompt/deployment/Dockerfile
    env_file:
      - ./prompt/.env
    ports:
      - "8000:8000"

  oauth:
    build:
      context: ./oauth
      dockerfile: ./Dockerfile
    env_file:
      - ./oauth/.env
    ports:
      - "3000:3000"

  spring:
    build:
      context: ./back/spring/back
      dockerfile: ./Dockerfile
    env_file:
      - ./back/spring/back/.env
    ports:
      - "8080:8080"
    depends_on:
      - postgres

  postgres:
    image: postgres:16
    container_name: postgres-db
    env_file:
      - ./db/.env
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data

volumes:
  postgres_data:
